{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-shadow": "off",
    "comma-dangle": "off",
    "quotes": [2, "double"],
    "semi": "off",
    "space-before-function-paren": "off"
  }
}
